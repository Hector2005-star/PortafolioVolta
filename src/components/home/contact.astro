<!-- Contact Section -->
<section class="mx-auto my-12" id="contacto">
  <div class="max-w-4xl p-6 mx-auto bg-white rounded-md shadow-md">
    <h2 class="text-2xl font-bold mb-4 text-center">Contacto</h2>
    <form id="contact-form" class="space-y-4" action="" method="POST">
      <div class="flex flex-col md:flex-row md:gap-4">
        <div class="flex-1">
          <label for="name" class="block">Nombre</label>
          <input
            type="text"
            id="name"
            class="form-control p-2 outline-none"
            placeholder="Tu nombre"
          />
        </div>
        <div class="flex-1">
          <label for="email" class="block">Correo Electrónico</label>
          <input
            type="email"
            name="email"
            id="email"
            class="form-control p-2 outline-none"
            placeholder="Tu correo electrónico"
          />
        </div>
      </div>
      <div>
        <label for="message" class="block w-full">Mensaje</label>
        <textarea
          id="message"
          name="message"
          class="form-control p-2 outline-none w-full"
          rows="4"
          placeholder="Tu mensaje"></textarea>
      </div>
      <div class="text-center">
        <button
          type="submit"
          class="w-full bg-black text-white py-2 rounded mt-4">Enviar</button
        >
      </div>
    </form>
  </div>
</section>
